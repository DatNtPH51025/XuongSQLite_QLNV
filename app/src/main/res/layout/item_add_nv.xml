    <!--        android:layout_height="wrap_content"-->
    <!--        android:layout_marginBottom="10dp"-->
    <!--        android:background="@drawable/back_edit"-->
    <!--        android:hint="Nhập vào email"-->
    <!--        android:padding="10dp" />-->

